#!/usr/bin/env ruby
load 'bin/game.rb'

Board.start

puts 'Player one name >>'
player_one = Players.new(gets.chomp.capitalize)
puts "Player #{player_one.name} plays with X\'s"
puts
puts 'Player two name >>'
player_two = Players.new(gets.chomp.capitalize)
puts "Player #{player_two.name} plays with O\'s"
puts
puts "#{player_one.name} choose your move >>"
player_one.current_move(gets.chomp)
Board.display
puts "#{player_one.name} chose #{player_one.move} position"
puts
puts "#{player_two.name} choose your move >>"
player_two.current_move(gets.chomp)
Board.display
puts "#{player_two.name} chose #{player_two.move} position"
